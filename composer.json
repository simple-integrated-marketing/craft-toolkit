{
    "name": "simpleteam/craft-toolkit",
    "description": "A comprehensive toolkit for Craft CMS - provides options, utilities, and enhanced functionality",
    "type": "craft-plugin",
    "keywords": [
        "craft",
        "cms",
        "craftcms",
        "craft-plugin",
        "toolkit",
        "options",
        "utilities",
        "wordpress-like"
    ],
    "support": {
        "docs": "https://plugins.simple-cloud.com.au"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Simple Integrated Marketing",
            "homepage": "https://simple.com.au"
        }
    ],
    "require": {
        "craftcms/cms": "^5.0"
    },
    "autoload": {
        "psr-4": {
          "Simpleteam\\Craft\\": "src/"
        }
    },
    "extra": {
        "name": "Simple Craft Toolkit",
        "handle": "simple-craft",
        "class": "Simpleteam\\Craft\\Plugin",
        "components": {
            "options": "Simpleteam\\Craft\\Database\\Options"
        }
    },
    "config": {
        "allow-plugins": {
            "yiisoft/yii2-composer": true,
            "craftcms/plugin-installer": true
        }
    }
}
